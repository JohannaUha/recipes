<%= form_for(setup_recipe(@recipe)) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :level %><br>
    <%= f.select :level_id, options_from_collection_for_select(@levels, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :active_time %><br>
    <%= f.number_field :active_time %>
  </div>
  <div class="field">
    <%= f.label :inactive_time %><br>
    <%= f.number_field :inactive_time %>
  </div>
  <div class="field">
    <%= f.label :vegetarian %><br>
    <%= f.check_box :vegetarian %>
  </div>
  <div class="field">
    <%= f.label :vegan %><br>
    <%= f.check_box :vegan %>
  </div>
  <div class="field">
    <%= f.label :lactose_free %><br>
    <%= f.check_box :lactose_free %>
  </div>
  <div class="field">
    <%= f.label :gluten_free %><br>
    <%= f.check_box :gluten_free %>
  </div>

  <div>
    <%= f.fields_for :ingredients do |ff| %>
        <table>
          <thead>
            <tr>
              <th><%= ff.label :amount %></th>
              <th><%= ff.label :unit %></th>
              <th><%= ff.label :name %></th>
            </tr>
          </thead>
          <body>
            <tr>
              <td><%= ff.number_field :amount %></td>
              <td><%= ff.text_field :unit %></td>
              <td><%= ff.text_field :name %></td>
            </tr>
          </body>
        </table>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
